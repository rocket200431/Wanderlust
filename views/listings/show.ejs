<% layout("/layouts/boilerplate") %>

<main class="flex-grow-1">
  <div class="container py-4">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <!-- Image Card -->
        <div class="card mb-4 shadow">
          <div class="card-img-container" style="height: 400px; overflow: hidden;">
            <img src="<%= listing.image %>" 
                 class="img-fluid w-100 h-100" 
                 alt="<%= listing.title %>"
                 style="object-fit: cover;"
                 onerror="this.onerror=null;this.src='https://images.unsplash.com/photo-1625505826533-5c80aca7d157'">
          </div>
          
          <div class="card-body">
            <h2 class="card-title mb-3"><%= listing.title %></h2>
            <div class="d-flex align-items-center mb-3">
              <i class="fas fa-map-marker-alt text-danger me-2"></i>
              <span class="text-muted"><%= listing.location %>, <%= listing.country %></span>
              <span class="ms-auto badge bg-success fs-6">
                â‚¹<%= listing.price.toLocaleString("en-IN") %>
              </span>
            </div>
            
            <p class="card-text lead"><%= listing.description %></p>
            
            <% if (currentUser && listing.author.equals(currentUser._id)) { %>
              <div class="mt-4 pt-3 border-top">
                <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning me-2">
                  <i class="fas fa-edit me-1"></i> Edit
                </a>
                
                <form class="d-inline" method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                  <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt me-1"></i> Delete
                  </button>
                </form>
              </div>
            <% } %>
          </div>
        </div>
        
        <div class="text-center mb-4">
          <a href="/listings" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Back to Listings
          </a>
        </div>
      </div>
    </div>
  </div>
</main>