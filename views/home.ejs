<%- include("partials/header") %>
<div class="home-container">
  <div class="hero-section">
    <h1 class="hero-title">Welcome to Wanderlust</h1>
    <p class="hero-subtitle">Discover unique stays around the world</p>
    
    <div class="auth-actions">
      <% if(!currentUser) { %>
        <div class="btn-group">
          <a href="/login" class="btn btn-outline">Login</a>
          <a href="/register" class="btn btn-primary">Register</a>
        </div>
      <% } else { %>
        <div class="welcome-actions">
          <p class="welcome-message">Welcome back, <%= currentUser.username %>!</p>
          <a href="/listings" class="btn btn-primary">Browse Listings</a>
        </div>
      <% } %>
    </div>
  </div>
</div>
<%- include("partials/footer") %>

<style>
  .home-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    min-height: 70vh;
    display: flex;
    align-items: center;
  }

  .hero-section {
    text-align: center;
    width: 100%;
  }

  .hero-title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: #333;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: #767676;
    margin-bottom: 2rem;
  }

  .btn-group {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .btn {
    padding: 0.75rem 2rem;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s;
  }

  .btn-primary {
    background-color: #FF5A5F;
    color: white;
    border: none;
  }

  .btn-primary:hover {
    background-color: #e04e54;
  }

  .btn-outline {
    border: 2px solid #FF5A5F;
    color: #FF5A5F;
    background: transparent;
  }

  .btn-outline:hover {
    background-color: rgba(255,90,95,0.1);
  }

  .welcome-message {
    font-size: 1.25rem;
    margin-bottom: 1.5rem;
    color: #484848;
  }
</style>